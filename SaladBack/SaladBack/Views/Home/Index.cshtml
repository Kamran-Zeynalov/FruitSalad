
@{
    List<FruitSalad> fruitSalads = ViewBag.FruitSalads;
    ViewBag.Title = "Home Page";
}

<section id="FruitCustomize">
    <div class="customizeAndImage">
        <div class="customizeImage">
            <div class="button">
                <a href="">
                    <button class="btn btn-light">
                        Customize your fruit <i class="bi bi-chevron-right"></i>
                    </button>
                </a>
            </div>
        </div>
        <div class="greenSection d-lg-block d-none">
            <div class="customizeText">
                <div class="container">
                    <div class="row">
                        <div class="text-button col-8">
                            <div class="text">
                                <p>Customize step by step.</p>
                                <h1>
                                    Customize your own fruit salad with natural ingredients.
                                </h1>
                            </div>
                            <div class="button">
                                <a href="">
                                    <button class="btn btn-light">
                                        Customize your fruit <i class="bi bi-chevron-right"></i>
                                    </button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<section id="SpecialOffers">
    <div class="container">
        <div class="row px-5 mt-4">
            <div class="specialTitle col-lg-6 col-12">
                <h1>Special offers</h1>
            </div>
            <div class="seeMore col-lg-6 col-12">
                <p><a href="./shop.html">See more detail</a></p>
            </div>
            @foreach (FruitSalad fs in fruitSalads)
            {

                <div class="col-lg-3 col-md-6">
                    <div class="image-info">
                        <div class="image-icon">
                            <div class="image">
                                <img src="~/assets/images/@fs.SaladImages.FirstOrDefault().Url" alt="Product">
                            </div>
                            <div class="heartIcon">
                                <i class="bi bi-heart"></i>
                            </div>
                        </div>
                        <div class="info">
                            <div class="rating">
                                <div class="star-icon">
                                    <i class="bi bi-star"></i>
                                </div>
                                <div class="point">
                                    <p>@fs.Rating.ToString("0.##")</p>
                                </div>
                            </div>

                            <div class="name-comp">
                                <h3><a asp-controller="Product" asp-action="Detail" asp-route-id="@fs.Id">@fs.Name</a></h3>
                                <p>
                                    @foreach (var f in fs.FruitSaladFruits.ToList())
                                    {
                                        @(f.Fruit?.Name + ", ")
                                    }
                                </p>
                            </div>
                            <div class="dollar-price">
                                $<span class="price">@fs.Price.ToString("0.##")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


