@using SaladBack.Core
@using SaladBack.Core.Models
@using SaladBack.ViewModel
@model FruitSaladVM

@{
    ViewData["Title"] = "Update";
}

<h1>Create</h1>

<h4>Fruit Salad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fruits</label>
                <select asp-for="FruitId" asp-items="@(new SelectList(Model.Fruits, nameof(Fruit.Id), nameof(Fruit.Name)))" multiple class="form-control">
                </select>
                <span asp-validation-for="FruitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sizes</label>
                <select asp-for="SizeId" asp-items="@(new SelectList(Model.Sizes, nameof(Size.Id), nameof(Size.Name)))" multiple class="form-control">
                </select>
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="5">Type</label>
                <input multiple asp-for="Files" type="file" class="form-control img-input" id="5">
                <span asp-validation-for="Files" class="text-danger"></span>

                <div class="img-preview-container">
                    @for (int i = 0; i < Model.Images.Count; i++)
                    {
                        var imagePath = Model.Images[i];
                        <div class="img-preview">
                            <img src="~/assets/images/@imagePath.Url" style="width:200px" />
                            @if (imagePath != null)
                            {
                                <a href="#" class="delete-btn btn btn-danger" data-imageid="@imagePath.Id">Delete Image</a>
                            }
                        </div>
                        <input type="hidden" name="ImageIds" value="@imagePath.Id" />
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/assets/js/image.js"></script>
